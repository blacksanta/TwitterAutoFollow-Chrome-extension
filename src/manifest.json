{
    "name": "Following_Green",
    "description": "ブラウザでキーユーザーから自動でフォローボタンを押します。",
    "version": "1.0",
    "manifest_version": 2,
    "icons": { "19": "icon19.png",
           "48": "icon48.png" },
    "background": {
        "scripts": ["background.js"]
    },
    "permissions": [
        "tabs", "https://twitter.com/*"
    ],
     
    "page_action": {
        "default_icon": "icon19.png",
        "default_title": "自動フォロー開始！"
    }  
}
